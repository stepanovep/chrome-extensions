{
  "name": "futjitsu",
  "manifest_version": 2,
  "version": "1.0",
  "description": "FUT helper",

  "page_action": {
    "default_popup": "popup.html",
    "default_title": "futjitsu"
  },

  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/icon16.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.easports.com/fifa/ultimate-team/web-app/"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  }
}